<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-6">
      <h1 class="display-4">Legislation Votes</h1>
    </div>
    <div class="col-md-6 text-end">
      <%= link_to new_legislation_vote_path, class: 'btn btn-primary btn-lg' do %>
        <i class="bi bi-plus-circle me-2"></i> Add New Vote
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @votes.each do |vote| %>
      <div class="col-md-12">
        <div class="card mb-4">
          <%= render 'card_body', vote: vote %>
          <div class="card-footer bg-transparent">
            <%= link_to 'View Details', legislation_vote_path(vote.legislation, vote), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
