<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-6">
      <h1 class="display-4">Politicians</h1>
    </div>
    <div class="col-md-6 text-end">
      <%= link_to new_politician_path, class: 'btn btn-primary btn-lg' do %>
        <i class="bi bi-plus-circle me-2"></i> Add New Politician
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @politicians.each do |politician| %>
      <div class="col-md-12">
        <div class="card mb-4">
          <%= render 'card_body', politician: politician %>
          <div class="card-footer bg-transparent">
            <%= link_to 'View Details', politician_path(politician), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
